<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--titlebar color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--statebar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--toobar样式-->
    <style name="AppTheme.AppBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">@dimen/title_bar_size</item>

    </style>

    <!--toobar 弹出框样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--弹出框字体颜色-->
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
        <!--弹出框背景颜色-->
        <item name="android:colorBackground">@color/white</item>
        <!--设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@color/white</item>
        <!--用于控制menu显示-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--把该属性改为false即可使menu位置位于toolbar之下-->
        <item name="overlapAnchor">false</item>
    </style>

</resources>
