<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="tt_BaseTheme">
        <!--titlebar color-->
        <item name="colorPrimary">@color/tt_colorPrimary</item>
        <!--statebar color-->
        <item name="colorPrimaryDark">@color/tt_colorPrimaryDark</item>
        <item name="colorAccent">@color/tt_colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--toobar样式-->
    <style name="AppTheme.AppBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">@dimen/tt_title_bar_size</item>
    </style>

    <!--欢迎页面样式，防止图片拉伸-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/tt_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="bottom_normal_text">
        <item name="android:textColor">@color/tt_font_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bottom_selected_text">
        <item name="android:textColor">@color/tt_colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
